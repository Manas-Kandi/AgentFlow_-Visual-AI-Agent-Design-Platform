{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://weev.app/schemas/mcp-export-0.1.json",
  "title": "MCP Export v0.1",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "flows", "tools", "environment"],
  "properties": {
    "version": { "type": "string", "const": "0.1" },
    "flows": {
      "type": "array",
      "items": { "$ref": "#/definitions/FlowSpec" },
      "minItems": 1
    },
    "tools": {
      "type": "array",
      "items": { "$ref": "#/definitions/ToolDefinition" }
    },
    "environment": { "$ref": "#/definitions/Environment" }
  },
  "definitions": {
    "NodeKind": {
      "type": "string",
      "enum": ["Agent", "ToolAgent", "DecisionTree", "KnowledgeBase"]
    },
    "NodePrompts": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "systemPrompt": { "type": "string" },
        "userPrompt": { "type": "string" },
        "behavior": { "type": "string" },
        "temperature": { "type": "number" },
        "provider": { "type": "string" },
        "model": { "type": "string" }
      }
    },
    "NodeSpec": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "kind", "config"],
      "properties": {
        "id": { "type": "string" },
        "kind": { "$ref": "#/definitions/NodeKind" },
        "label": { "type": "string" },
        "config": { "type": "object" },
        "prompts": { "$ref": "#/definitions/NodePrompts" }
      }
    },
    "EdgeSpec": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "from", "to"],
      "properties": {
        "id": { "type": "string" },
        "from": { "type": "string" },
        "to": { "type": "string" },
        "condition": { "type": "string" },
        "label": { "type": "string" }
      }
    },
    "FlowMeta": {
      "type": "object",
      "additionalProperties": false,
      "required": ["createdBy", "createdAt"],
      "properties": {
        "createdBy": { "type": "string" },
        "rationale": { "type": "string" },
        "createdAt": { "type": "number" },
        "tags": { "type": "array", "items": { "type": "string" } }
      }
    },
    "FlowSpec": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "nodes", "edges", "meta"],
      "properties": {
        "id": { "type": "string" },
        "nodes": { "type": "array", "items": { "$ref": "#/definitions/NodeSpec" } },
        "edges": { "type": "array", "items": { "$ref": "#/definitions/EdgeSpec" } },
        "meta": { "$ref": "#/definitions/FlowMeta" },
        "startNodeIds": { "type": "array", "items": { "type": "string" } }
      }
    },
    "ToolSchema": {
      "type": "object",
      "additionalProperties": false,
      "required": ["args", "returns"],
      "properties": {
        "args": { "type": "object" },
        "returns": { "type": "object" }
      }
    },
    "ToolDefinition": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "schema"],
      "properties": {
        "name": { "type": "string" },
        "schema": { "$ref": "#/definitions/ToolSchema" },
        "description": { "type": "string" },
        "category": { "type": "string" }
      }
    },
    "Environment": {
      "type": "object",
      "additionalProperties": false,
      "required": ["mode"],
      "properties": {
        "mode": { "type": "string", "enum": ["mock", "mixed", "live"] },
        "mockProfile": { "type": "string" },
        "seed": { "type": ["string"], "enum": ["auto"], "nullable": true },
        "latency": {
          "type": "object",
          "additionalProperties": false,
          "properties": { "min": { "type": "number" }, "max": { "type": "number" } }
        },
        "errorInjection": {
          "type": ["object", "null"],
          "additionalProperties": false,
          "properties": { "type": { "type": "string" }, "message": { "type": "string" }, "probability": { "type": "number" } }
        },
        "scenario": { "type": "string" },
        "llmDefaults": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "provider": { "type": "string" },
            "model": { "type": "string" },
            "temperature": { "type": "number" }
          }
        }
      }
    }
  }
}
